@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form method="get" asp-action="Index" > 
  @*   <div>
        <label asp-for="Pesquisa" class="control-label"></label>
    </div> *@
    <div class="form-group" style="display: flex; margin-top: 5px;">
        <input asp-for="Pesquisa" class="form-control" />
        <span asp-validation-for="Pesquisa" class="text-danger"></span>

         <input type="submit" value="Pesquisar" class="btn btn-padrao" />
    </div>
@* 
    <div class="form-group text-center">
        <input type="submit" value="Pesquisar" class="btn btn-padrao" />
    </div> *@

</form>
@if (Model.CategoriasViewModels != null)
{
    @foreach (var categoria in Model.CategoriasViewModels)
    {
        <section class="section" id="categoria">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="section-heading">
                            <h2>@categoria.Nome</h2>
                            @* <span>Details to details is what makes Hexashop different from the other themes.</span> *@
                        </div>
                    </div>
                </div>
            </div>

             <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product-item-carousel">
                        <div class="owl-product-item owl-carousel">
                             @await Component.InvokeAsync("CategoriaProdutos", new { categoriaId = categoria.Id})
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
        </section class="section" id="categoria">
    }
}
else if (Model.ProdutoViewModels != null)
{
        <section id="products" class="products-section">
            @foreach (var produto in Model.ProdutoViewModels)
            {
                    <div >
                        <partial name="_ProdutoResumo" for="@produto" />
                    </div>
            }
        </section>
}
else{
    <div class="row">
        <div class="text-center">
            <h1 class="display-4">Nenhum produto registrado</h1>
        </div>
    </div>
}

<script>
    $('.owl-product-item').owlCarousel({
        loop: false,
        dots: false,
        nav: true,
        navText: [
            '<i class="bi bi-arrow-left"></i>',
            '<i class="bi bi-arrow-right"></i>'
        ],
        margin: 30,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 2
            },
            1000: {
                items: 3
            }
        }
    })

